= form_for @bike_hire do |f|
  - if @bike_hire.errors.any?
    #error_explanation
      %h2= "#{pluralize(@bike_hire.errors.count, "error")} prohibited this bike_hire from being saved:"
      %ul
        - @bike_hire.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :manufacturer
    = f.text_area :manufacturer
  .field
    = f.label :image
    = f.text_field :image
  .actions
    = f.submit 'Save'
